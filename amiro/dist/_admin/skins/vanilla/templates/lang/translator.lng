$aExportModules = array('news', 'blog');

$aEngineParams = array(
    'LJ' => array(
        'login'       => '<b>ВАШ_ЛОГИН</b>',
        'password'    => '<b>ВАШ_ПАРОЛЬ</b>',
        'login_page'  => 'http://www.livejournal.com/login.bml',
        'login_act'   => 'http://www.livejournal.com/login.bml?ret=1',
        'post_page'   => 'http://www.livejournal.com/update.bml',
        'post_act'    => 'http://www.livejournal.com/update.bml',
        'update_page' => 'http://www.livejournal.com/editjournal.bml',
        'update_act'  => 'http://www.livejournal.com/editjournal.bml',
        'fields'      => array(
            'subject' => 'header',
            'event'   => 'body'
        )
    )
);

?&gt;
</pre></font>

